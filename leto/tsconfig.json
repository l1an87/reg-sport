{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowJs": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"paths": {
			"@/*": ["./src/*"],
			"@assets/*": ["./src/assets/*"],
			"@config/*": ["./src/config/*"],
			"@modules/*": ["./src/modules/*"],
			"@routes/*": ["./src/routes/*"],
			"@ui/*": ["./src/ui/*"]
		},
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"references": [
		{"path": "./tsconfig.node.json"}
	]
}